                android:targetPackage="me.liaoheng.wallpaper">
            <extra
                    android:name="set_wallpaper_mode"
                    android:value="1" />
            <extra
                    android:name="shortcutId"
                    android:value="home" />
        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
            android:enabled="true"
            android:icon="@drawable/ic_shortcut_lock"
            android:shortcutId="lock"
            android:shortcutShortLabel="@string/pref_set_wallpaper_auto_mode_lock">
        <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="me.liaoheng.wallpaper.ui.ShortcutActivity"
                android:targetPackage="me.liaoheng.wallpaper">
            <extra
                    android:name="set_wallpaper_mode"
                    android:value="2" />
            <extra
                    android:name="shortcutId"
                    android:value="lock" />
        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>